#include <iostream>
using namespace std;

int main(){
    int n,cont=0;
    cin >> n;
    for(int i = 0; i<n; i++){
        string line;
        cin >> line;
        if(line[0]=='X'){
            if(line[1]=='+'){
                cont++;
            }else cont--;
        }else{
            if(line[0]=='+'){
                cont++;
            }else cont--;
        }
    }
    cout << cont;
    return 0;
}
