#include <iostream>
using namespace std;

int main(){
    string s1;
    string result="";
    unsigned short n;
    cin >> n;
    for(int i=0; i<n;i++){
        if(i%2!=0){
            result+="I love ";
        }else{
            result+="I hate ";
        }
        if(i!=n-1){
            result+="that ";
        }
    }
    result+="it";
    cout << result;
    return 0;
}
